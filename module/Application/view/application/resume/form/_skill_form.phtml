<script>
    var general = <?php if(count($this->education)>0) echo json_encode($this->education); else echo '[]'?>;
    var baseUrl = '<?php echo $this->basepath(); ?>';
    $(function(){
        setValueToField(general, '.frm');
        $('.btn-update').on('click', function () {
            $('.loading').removeClass('hidden');
            $('.sms-fail').addClass('hidden');
            $.ajax({
                url: baseUrl + '/resume/updateskill',
                data: getValueFromField('.frm'),
                type:'post',
                success: function(){
                    $('.loading').addClass('hidden');
                    window.location.href = baseUrl + '/resume'
                },
                error: function(){
                    $('.loading').addClass('hidden');
                    $('.sms-fail').removeClass('hidden');
                }
            });
        });

        $('textarea').wysihtml5();
    });
</script>